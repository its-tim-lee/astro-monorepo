{
  "name": "Astro Monorepo Devbox",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspace",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "packages/app/src/pages/index.astro"
      ]
    }
  },
  "postCreateCommand": "pnpm install && cd packages/app && pnpm dev",
  "forwardPorts": [4321],
  "portsAttributes": {
    "4321": {
      "label": "Astro Dev Server"
    }
  }
}
