{
  "name": "Astro Monorepo",
  "workspaceFolder": "/workspaces/astro-monorepo",
  "postCreateCommand": "pnpm install --filter app...",
  "customizations": {
    "codespaces": {
      "postCreateCommand": "cd packages/app && pnpm install && pnpm run dev"
    }
  },
  "remoteUser": "sandbox",
  "containerEnv": {
    "NODE_ENV": "development"
  }
}
